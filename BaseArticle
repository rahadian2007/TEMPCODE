import React, { useEffect, useState } from "react";
import axios from "axios";

const SingleArticle = ({ id }) => {
  const [artikel, setArtikel] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);

  useEffect(() => {
    // Log ID untuk memastikan ID valid
    console.log("Ambil artikel ID:", id);

    axios
      .get(`https://best-charity-a852c78925c.strapiapp.com/api/articles/${id}`)
      .then((res) => {
        setArtikel(res.data.data);
        setLoading(false);
      })
      .catch((err) => {
        console.error("Gagal mengambil artikel:", err);
        setError("Artikel tidak ditemukan.");
        setLoading(false);
      });
  }, [id]);

  if (loading) return <p>Memuat artikel...</p>;
  if (error) return <p style={{ color: "red" }}>{error}</p>;
  if (!artikel || !artikel.attributes) return <p>Artikel kosong.</p>;

  return (
    <div>
      <h2>{artikel.attributes.judul}</h2>
      <div
        dangerouslySetInnerHTML={{ __html: artikel.attributes.isi }}
        style={{ marginTop: "1rem" }}
      />
    </div>
  );
};

export default SingleArticle;
